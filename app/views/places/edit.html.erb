
<div class="booyah-box col-xs-10 col-xs-offset-1">
	<h1>Edit Your Review</h1>
	<%= simple_form_for @place do |f| %>
		<%= f.input :name %>
		<%= f.input :address %>
		<%= f.input :description %>
		<br />
		<%= f.submit 'Update', class: 'btn btn-primary' %>
		
		<%= link_to 'Delete', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'} %>
	<% end %>
</div>	